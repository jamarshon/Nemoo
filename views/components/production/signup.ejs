<md-content class="md-padding"><form name="signupForm" ng-submit="signUpCtrl.submit('/signup')"><md-input-container class="md-block" style="margin-bottom:7px;margin-top:18px"><md-icon class="material-icons">email</md-icon><input ng-model="signUpCtrl.data.email" type="email" name="email" placeholder="Email" required></md-input-container><md-input-container class="md-block" style="margin-bottom:7px;margin-top:7px"><md-icon class="material-icons">vpn_key</md-icon><input ng-model="signUpCtrl.data.password" type="password" name="password" placeholder="Password" minlength="8" ng-pattern="/^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).+$/" required></md-input-container><md-input-container class="md-block" style="margin-bottom:0;margin-top:7px"><md-icon class="material-icons" style="visibility:hidden">vpn_key</md-icon><input ng-model="signUpCtrl.data.password2" type="password" name="password2" placeholder="Confirm password" ng-pattern="{{signUpCtrl.data.password}}" required></md-input-container><div ng-messages="signupForm.password.$error" style="color:red;font-style:italic"><div ng-message="minlength">
        Password should be at least 8 letters.
      </div><div ng-message="pattern">
        Password must contain at least one upper case, lower case and a number.
      </div></div><div ng-hide="signupForm.password.$invalid" ng-messages="signupForm.password2.$error" style="color:red;font-style:italic"><div ng-message="pattern">
        Passwords do not match. Please try again.
      </div></div><div style="color:red;font-style:italic" ng-bind="signUpCtrl.message"></div><md-button type="submit" class="md-accent md-raised" ng-disabled="signupForm.$invalid">Sign Up</md-button></form></md-content>