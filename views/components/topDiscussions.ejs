<div>
<md-subheader class="blue-box removed expand-on-hover-parent md-no-sticky" 
  ng-click="toggleBoolean = !toggleBoolean" style="cursor: pointer;">
  <div class="expand-on-hover" ng-style="fontStyling" 
        style="display: inline-block; font-weight: bold; font-size: 16px;" ng-bind="categoryLabel"></div>
  <i class="fa fa-lg expand-on-hover" ng-style="caretStyling"
    ng-class="toggleBoolean ? 'fa-caret-down' : 'fa-caret-up'" style="float: right;"></i>
</md-subheader>
<md-divider></md-divider>

<div class="menu-toggle-dropdown" ng-hide="toggleBoolean">
  <md-item ng-repeat="item in discussions track by item.title">
    <a class="blue-box removed" ng-click="localClickHandler($event, item)">
      <md-item-content md-ink-ripple layout="row" layout-align="start center" style="cursor: pointer;">
        <div class="inset" ng-style="itemStyling" style="word-break: break-all" ng-bind="item.title"></div>
      </md-item-content>
      <md-divider></md-divider>
    </a>
  </md-item>
</div>
</div>