<div layout="column" layout-fill layout-align="top center" style="overflow:hidden;" ng-init="discussionCtrl.init(main, '<%=name%>')">
  <div layout="row" style="border-bottom: 1px solid lightgrey; width:100%; min-height:24px;"> 
    <div class="ellipsis" style="font-weight:bold; max-width:80%;"><%=name%> 
      <md-tooltip class="custom-tool-tip" md-direction="left"> <%=name%> </md-tooltip>
    </div>
    <div flex class="ellipsis" style="margin-left:20px;"><%=description%>
      <md-tooltip class="custom-tool-tip" md-direction="center"> <%=description%> </md-tooltip>
    </div>
  </div>
  <md-content id="scrollable-container" ng-init="discussionCtrl.data = <%=JSON.stringify(data)%>" style="width:100%;">
    <md-list>
      <md-list-item class="md-3-line animate-message" ng-repeat="item in discussionCtrl.data">
        <img ng-src="{{item.profilePic}}" class="md-avatar" ng-style="{'background-color': '{{item.backgroundColor}}' } "/>
        <div class="md-list-item-text">
          <h3 style="display:inline;">{{item.displayName}}</h3>
          <h4 hide show-gt-sm style="float: right;">{{item.created | date : 'h:mm a MMM dd, yyyy'}}</h4>
          <h4 hide-gt-sm style="float: right;">{{item.created | date : 'hh:mm'}}</h4>
          <p ng-bind-html="item.message" style="color: rgba(0,0,0,0.87); word-break: break-word;"></p>
        </div>
        <md-divider md-inset ng-if="!$last"></md-divider>
      </md-list-item>
    </md-list>
  </md-content>
  <nemoo-message-input style="width:100%;"></nemoo-message-input>
</div>

