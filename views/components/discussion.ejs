<div layout="column" layout-fill layout-align="top center" style="overflow:hidden;" 
    ng-init="discussionCtrl.init('<%=name%>', <%=prerenderedLen%>)">
  <div layout="row" style="border-bottom: 1px solid lightgrey; width:100%; min-height:24px;"> 
    <div class="ellipsis" style="font-weight:bold; max-width:80%;"><%=name%> 
      <md-tooltip class="custom-tool-tip" md-direction="left"> <%=name%> </md-tooltip>
    </div>
    <div flex class="ellipsis" style="margin-left:20px;"><%=description%>
      <md-tooltip class="custom-tool-tip" md-direction="center"> <%=description%> </md-tooltip>
    </div>
    <div class="expand-on-hover-parent blue-box removed" ng-if="discussionCtrl.addableToFavorites"
          ng-click="discussionCtrl.addToFavorite($event)">
      <i class="fa fa-plus-square expand-on-hover" style="cursor: pointer; font-size: 20px;"></i>
    </div>
  </div>
  <md-content id="scrollable-container" style="width:100%;">
    <md-list id="scrollable-container-list">
      <%-prerendered%>
      <md-list-item class="md-3-line animate-message" ng-repeat="item in discussionCtrl.data track by $index">
        <img ng-src="{{::item.profilePic}}" class="md-avatar" ng-style="{&#39;background-color&#39;: &#39;{{::item.backgroundColor}}&#39; } "/>
        <div class="md-list-item-text">
          <h3 style="display:inline;" ng-bind="::item.displayName"></h3>
          <h4 hide show-gt-sm style="float: right;" ng-bind="::item.created | date : 'h:mm a MMM dd, yyyy'"></h4>
          <h4 hide-gt-sm style="float: right;" ng-bind="::item.created | date : 'hh:mm'"></h4>
          <p ng-bind-html="::item.message" style="color: rgba(0,0,0,0.70); word-break: break-word; font-size: 18px;"></p>
        </div>
        <md-divider md-inset ng-if="::!$last"></md-divider>
      </md-list-item>
    </md-list>
  </md-content>
  <nemoo-message-input style="width:100%;" quick-message-handler="discussionCtrl.quickMessageHandler(msg, user)"></nemoo-message-input>
</div>

