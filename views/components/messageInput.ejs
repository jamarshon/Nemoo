<form layout layout-align="center" ng-init="messageCtrl.init(main)">
  <div layout="row" flex>
    <md-input-container flex class="md-no-momentum no-error" md-no-float>
      <div id="message-input-box" class="md-input"
            spellcheck="false" autocomplete="off"
            contenteditable="true" style="height: auto;"
            on-enter-pressed="messageCtrl.enterHandler()"
            on-ctrl-enter-pressed="messageCtrl.ctrlEnterHandler()"
            custom-key-press></div>
            <nemoo-message-additional-options> </nemoo-message-additional-options>
    </md-input-container>
    <div>
      <md-button class="md-accent md-raised" ng-click="messageCtrl.send()" 
                  ng-disabled="messageCtrl.message.length === 0" 
                  ng-style="messageCtrl.isLarge ? {}: {'min-width': '0px', 'padding-left': '8px', 'padding-right': '8px'}">
                  Send
      </md-button>
    </div>
  </div>  
</form>