<md-item hide-gt-sm> 
<a class="blue-box removed" ng-click="userNavCtrl.unfocus($event); userNavCtrl.softRedirect('')">
	<md-item-content md-ink-ripple layout="row" layout-align="start center" style="cursor: pointer;">
		<div class="inset">
			<md-icon class="material-icons">home</md-icon>
		</div>
		<div class="inset">Home</div>
	</md-item-content>
</a>

<a class="blue-box removed" ng-click="userNavCtrl.unfocus($event, header.showTabDialog);">
	<md-item-content md-ink-ripple layout="row" layout-align="start center" ng-hide="userNavCtrl.loggedIn" style="cursor: pointer;">
		<div class="inset">
			<md-icon class="material-icons">account_box</md-icon>
		</div>
		<div class="inset">Login / Sign-Up</div>
	</md-item-content>
</a>

<a ng-click="userNavCtrl.hardRedirect('/logout')">
	<md-item-content md-ink-ripple layout="row" layout-align="start center" ng-show="userNavCtrl.loggedIn" style="cursor: pointer;" >
		<div class="inset">
			<i class="fa fa-sign-out greyFA"></i>
		</div>
		<div class="inset">Logout</div>
	</md-item-content>
</a>

</md-item>