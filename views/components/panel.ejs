<md-list style="padding: 0px;" ng-init="panelCtrl.init(main)">
  <md-divider></md-divider>
  <md-subheader style="font-weight: bold; font-size: 16px;">General</md-subheader>
  <md-divider></md-divider>
  
  <nemoo-user-nav-panel></nemoo-user-nav-panel>
  <md-item ng-repeat="item in panelCtrl.general | filter: panelCtrl.removeSettings(main.loggedIn)">
      <a ng-click="panelCtrl.unfocus($event, item)">
      <md-item-content md-ink-ripple layout="row" layout-align="start center" style="cursor: pointer;" >
        <div class="inset">
          <md-icon class="material-icons" ng-bind="item.icon"></md-icon>
        </div>
        <div class="inset" ng-bind="item.title"></div>
      </md-item-content>
      </a>
  </md-item>
  <md-divider></md-divider>
  <md-subheader class="blue-box removed expand-on-hover-parent" 
    ng-click="panelCtrl.hideTrending = !panelCtrl.hideTrending;" style="cursor: pointer;">
    <div class="expand-on-hover" style="display: inline-block; font-weight: bold; font-size: 16px;">Trending</div>
    <i class="fa fa-lg expand-on-hover" ng-class="panelCtrl.hideTrending ? 'fa-caret-down' : 'fa-caret-up'" style="float: right;"></i>
  </md-subheader>
  <md-divider></md-divider>
  
  <div class="menu-toggle-dropdown" ng-hide="panelCtrl.hideTrending">
    <md-item ng-repeat="item in panelCtrl.trending">
      <a ng-click="panelCtrl.unfocus($event, item)">
        <md-item-content md-ink-ripple layout="row" layout-align="start center" style="cursor: pointer;">
          <div class="inset" style="word-break: break-all" ng-bind="item.title"></div>
        </md-item-content>
        <md-divider></md-divider>
      </a>
    </md-item>
  </div>
</md-list>