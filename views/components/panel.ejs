<md-list style="padding: 0px;">
  <md-divider></md-divider>

  <md-subheader class="blue-box removed expand-on-hover-parent md-no-sticky" 
    ng-click="panelCtrl.hideGeneral = !panelCtrl.hideGeneral;" style="cursor: pointer;">
    <div class="expand-on-hover" style="display: inline-block; font-weight: bold; font-size: 16px;">General</div>
    <i class="fa fa-lg expand-on-hover" ng-class="panelCtrl.hideGeneral ? 'fa-caret-down' : 'fa-caret-up'" style="float: right;"></i>
  </md-subheader>
  <md-divider></md-divider>

  <div class="menu-toggle-dropdown" ng-hide="panelCtrl.hideGeneral">
    <nemoo-user-nav-panel></nemoo-user-nav-panel>
    <md-item ng-repeat="item in panelCtrl.general">
        <a class="blue-box removed" ng-click="panelCtrl.unfocus($event, item)">
        <md-item-content md-ink-ripple layout="row" layout-align="start center" style="cursor: pointer;" >
          <div class="inset">
            <md-icon class="material-icons" ng-bind="item.icon"></md-icon>
          </div>
          <div class="inset" ng-bind="item.title"></div>
        </md-item-content>
        </a>
    </md-item>
  </div>
  <md-divider></md-divider>

  <nemoo-top-discussions ng-if="panelCtrl.favorites.length > 0"
    toggle-boolean="panelCtrl.hideFavorites"
    discussions="panelCtrl.favorites"
    category-label="Favorites"
    on-click-handler="panelCtrl.unfocus(localEvent, localName)"></nemoo-top-discussions>

  <nemoo-top-discussions 
    toggle-boolean="panelCtrl.hideTrending"
    discussions="panelCtrl.trending"
    category-label="Trending"
    item-styling="{'padding-left': '24px'}"
    on-click-handler="panelCtrl.unfocus(localEvent, localName)"></nemoo-top-discussions>

  <md-subheader class="blue-box removed expand-on-hover-parent md-no-sticky" 
    ng-click="panelCtrl.hideTopDiscussions = !panelCtrl.hideTopDiscussions;" style="cursor: pointer;">
    <div class="expand-on-hover" style="display: inline-block; font-weight: bold; font-size: 16px;">Top Discussions</div>
    <i class="fa fa-lg expand-on-hover" ng-class="panelCtrl.hideTopDiscussions ? 'fa-caret-down' : 'fa-caret-up'" style="float: right;"></i>
  </md-subheader>
  <md-divider></md-divider>

  <div class="menu-toggle-dropdown" ng-hide="panelCtrl.hideTopDiscussions">
    <nemoo-top-discussions 
      toggle-boolean="top.toggleBoolean"
      discussions="top.discussions"
      category-label="{{top.categoryLabel}}"
      font-styling="{'font-size': '14px', 'font-style': 'italic', 'font-weight': 500, 'padding-left': '20px'}"
      item-styling="{'padding-left': '48px'}"
      caret-styling="{'line-height': '0.9375em', 'font-size': '1.06666666em'}"
      on-click-handler="panelCtrl.unfocus(localEvent, localName)"
      ng-repeat="top in panelCtrl.topDiscussions"></nemoo-top-discussions>
  </div>
</md-list>